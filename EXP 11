#include <stdio.h>

int n;                   // Number of states
int eps[10][10];         // Epsilon transition matrix
int visited[10];

// DFS function to find epsilon-closure
void dfs(int s) {
    int i;
    visited[s] = 1;

    for (i = 0; i < n; i++) {
        if (eps[s][i] == 1 && !visited[i]) {
            dfs(i);
        }
    }
}

int main() {
    int i, j;

    printf("Enter number of states: ");
    scanf("%d", &n);

    printf("Enter epsilon transition matrix:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &eps[i][j]);
        }
    }

    // Find epsilon-closure for each state
    for (i = 0; i < n; i++) {
        // Reset visited array
        for (j = 0; j < n; j++)
            visited[j] = 0;

        dfs(i);

        printf("Îµ-closure(q%d) = { ", i);
        for (j = 0; j < n; j++) {
            if (visited[j])
                printf("q%d ", j);
        }
        printf("}\n");
    }

    return 0;
}
