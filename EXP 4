#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, len, flag = 1;

    printf("Enter the string: ");
    scanf("%s", str);

    len = strlen(str);

    // Check palindrome
    for (i = 0; i < len / 2; i++) {
        if (str[i] != str[len - i - 1]) {
            flag = 0;
            break;
        }
    }

    if (flag)
        printf("String is ACCEPTED by the CFG\n");
    else
        printf("String is NOT accepted by the CFG\n");

    return 0;
}
